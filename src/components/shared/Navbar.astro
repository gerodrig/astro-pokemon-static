---
const links = [
  {
    href: '/',
    text: 'Listing',
  },
  {
    href: '/pokemons/1',
    text: 'Paginated',
  },
  {
    href: '/favorites',
    text: 'Favorites',
  },
  {
    href: '/islands',
    text: 'Islands',
  },
];

const currentPath = Astro.url.pathname;
---

<!-- component -->
<nav class="shadow dark:bg-gray-800 bg-slate-800">
  <div
    class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300"
  >
    <!-- {
      links.map(({ href, text }) => (
        <a
          href={href}
          class:list={[
            'text-gray-800 dark:text-gray-200 mx-1.5 sm:mx-6',
            {
              'border-blue-500 border-b-2': currentPath === href,
            },
          ]}
        >
          {text}
        </a>
      ))
    } -->
    {
      links.map(({ href, text }) => (
        <div>
          <a
            href={href}
            class='text-white dark:text-gray-200 mx-1.5 sm:mx-6'
          >
            {text}
          </a>
          {
            currentPath === href ? (
              <div transition:name="menu-line" class="border-blue-500 border-b-2 mx-4"></div>
            ) : (
                <div class="border-b-2 border-transparent"></div>
            )
          }
        </div>
      ))
    }
  </div>
</nav>
